---
import { SEO } from 'astro-seo';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  keywords?: string;
}

const {
  title = 'Cuidaty - Tecnologia que cuida da sua rotina',
  description = 'Liberte-se da sobrecarga administrativa e recupere o tempo para o que realmente importa: cuidar dos seus pacientes.',
  image = '/screenshot.png',
  noindex = false,
  keywords = 'software para psicólogos, gestão de consultório, agenda médica, sistema para clínicas, prontuário eletrônico, agendamento online, gestão de pacientes, software médico, telemedicina, consultório online',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullImageURL = new URL(image, Astro.site).toString();

// Structured data for better SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Cuidaty',
  applicationCategory: 'BusinessApplication',
  operatingSystem: 'Web',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'BRL',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    ratingCount: '50',
  },
  description: description,
  url: Astro.site,
  provider: {
    '@type': 'Organization',
    name: 'Cuidaty',
    url: Astro.site,
    logo: new URL('/logo.svg', Astro.site).toString(),
    contactPoint: {
      '@type': 'ContactPoint',
      contactType: 'Customer Support',
      availableLanguage: ['Portuguese'],
    },
  },
};
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons and Icons -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#10b981" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#10b981" />

    <!-- Additional Meta Tags -->
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Cuidaty" />
    <meta name="robots" content={noindex ? 'noindex,nofollow' : 'index,follow'} />
    <meta name="language" content="Portuguese" />
    <meta name="revisit-after" content="7 days" />
    <meta name="generator" content={Astro.generator} />

    <!-- Geo Tags -->
    <meta name="geo.region" content="BR" />
    <meta name="geo.placename" content="Brasil" />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.toString()}
      noindex={noindex}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: fullImageURL,
          url: canonicalURL.toString(),
        },
        optional: {
          description: description,
          siteName: 'Cuidaty',
          locale: 'pt_BR',
        },
        image: {
          url: fullImageURL,
          secureUrl: fullImageURL,
          type: 'image/png',
          width: 1200,
          height: 630,
          alt: 'Cuidaty - Sistema de gestão para consultórios e clínicas',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@cuidaty',
        creator: '@cuidaty',
        title: title,
        description: description,
        image: fullImageURL,
        imageAlt: 'Cuidaty - Sistema de gestão para consultórios e clínicas',
      }}
    />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>
  <body>
    <slot />
  </body>
</html>
