---
import { SEO } from 'astro-seo';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  keywords?: string;
}

const {
  title = 'Cuidaty - Tecnologia que cuida da sua rotina',
  description = 'Liberte-se da sobrecarga administrativa e recupere o tempo para o que realmente importa: cuidar dos seus pacientes.',
  image = '/screenshot.png',
  noindex = false,
  keywords = 'software para psicólogos, gestão de consultório, agenda médica, sistema para clínicas, prontuário eletrônico, agendamento online, gestão de pacientes, software médico, telemedicina, consultório online',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullImageURL = new URL(image, Astro.site).toString();

// Structured data for better SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Cuidaty',
  applicationCategory: 'BusinessApplication',
  operatingSystem: 'Web',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'BRL',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    ratingCount: '50',
  },
  description: description,
  url: Astro.site,
  provider: {
    '@type': 'Organization',
    name: 'Cuidaty',
    url: Astro.site,
    logo: new URL('/logo.svg', Astro.site).toString(),
    contactPoint: {
      '@type': 'ContactPoint',
      contactType: 'Customer Support',
      availableLanguage: ['Portuguese'],
    },
  },
};
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

    <!-- DNS Prefetch and Preconnect for Performance -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload Critical Resources -->
    <link rel="preload" href="/logo.svg" as="image" type="image/svg+xml" fetchpriority="high" />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Arapey:ital@0;1&family=Poppins:wght@300;400;500;600;700&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
      fetchpriority="high"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Arapey:ital@0;1&family=Poppins:wght@300;400;500;600;700&display=swap"
      />
    </noscript>

    <!-- Preload hero background image for LCP -->
    <link rel="preload" href="/leaves-bg.png" as="image" fetchpriority="high" />

    <!-- Favicons and Icons -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#10b981" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#10b981" />

    <!-- Additional Meta Tags -->
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Cuidaty" />
    <meta name="robots" content={noindex ? 'noindex,nofollow' : 'index,follow'} />
    <meta name="language" content="Portuguese" />
    <meta name="revisit-after" content="7 days" />
    <meta name="generator" content={Astro.generator} />

    <!-- Geo Tags -->
    <meta name="geo.region" content="BR" />
    <meta name="geo.placename" content="Brasil" />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.toString()}
      noindex={noindex}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: fullImageURL,
          url: canonicalURL.toString(),
        },
        optional: {
          description: description,
          siteName: 'Cuidaty',
          locale: 'pt_BR',
        },
        image: {
          url: fullImageURL,
          secureUrl: fullImageURL,
          type: 'image/png',
          width: 1200,
          height: 630,
          alt: 'Cuidaty - Sistema de gestão para consultórios e clínicas',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@cuidaty',
        creator: '@cuidaty',
        title: title,
        description: description,
        image: fullImageURL,
        imageAlt: 'Cuidaty - Sistema de gestão para consultórios e clínicas',
      }}
    />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Inline critical CSS for font loading -->
    <style>
      /* Font loading optimization */
      @font-face {
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: local('Poppins');
      }
      @font-face {
        font-family: 'Lora';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: local('Lora');
      }

      /* Prevent layout shift for images */
      img {
        content-visibility: auto;
      }

      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }

      /* Critical above-the-fold styles */
      body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Prevent FOUC (Flash of Unstyled Content) */
      .astro-route-announcer {
        position: absolute;
        left: -10000px;
        width: 1px;
        height: 1px;
        overflow: hidden;
      }

      /* Header height reservation to prevent CLS */
      header {
        min-height: 72px;
      }
    </style>

    <!-- Performance optimization script -->
    <script is:inline>
      // Prefetch links on hover for faster navigation
      if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const link = entry.target;
              const href = link.getAttribute('href');
              if (href && href.startsWith('#')) {
                // Internal anchor, no prefetch needed
                return;
              }
            }
          });
        });

        // Observe all links on the page after DOM loads
        window.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('a[href]').forEach((link) => {
            link.addEventListener('mouseenter', () => {
              const href = link.getAttribute('href');
              if (href && !href.startsWith('#') && !href.startsWith('javascript:')) {
                const linkElem = document.createElement('link');
                linkElem.rel = 'prefetch';
                linkElem.href = href;
                document.head.appendChild(linkElem);
              }
            });
          });
        });
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
